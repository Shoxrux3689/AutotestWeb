@model User

<h1>Tickets</h1>

@{
    for (int i = (ViewBag.Page - 1) * 10; i < ViewBag.Page * 10; i++)
    {
        <form asp-action="GetQuestionById" asp-route-id="@(i * 10 + 1)" asp-route-ticketIndex="@i">
            <div class="card">
                <img src="/TicketImage/Ticket.png" style="width:100%">
                <h1>Ticket: @(i+1)</h1>
                <h3>@(Model.TicketResults[i].CorrectAnswers!.Count) / 10</h3>
                <h4 class="title">@Model.TicketResults[i].Date</h4>
                <button type="submit">Start</button>
            </div>
        </form>
    }
}

<div class="center">
    <div class="pagination">
        @{
            for (int i = 1; i < 8; i++)
            {
                if (i == ViewBag.Page)
                {
                    <a class="active" asp-action="Index" asp-route-language="@ViewBag.Language" asp-route-page="@i">@i</a>
                }
                else
                {
                    <a asp-action="Index" asp-route-language="@ViewBag.Language" asp-route-page="@i">@i</a>
                }
                
            }
        }
    </div>
</div>

