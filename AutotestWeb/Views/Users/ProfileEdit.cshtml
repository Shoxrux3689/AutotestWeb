@model User

<h1>Edit Profile</h1>

<form class="row g-3" style="width: 400px" asp-controller="Users" asp-action="ProfileEdit2" method="post" enctype="multipart/form-data">
    <div>
        <input name="Username" class="form-control" asp-for="Username" type="text" placeholder="Username" />
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>
    <div>
        <input name="Name" class="form-control" asp-for="Name" type="text" placeholder="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div>
        <input name="Password" class="form-control" asp-for="Password" type="text" placeholder="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <button class="form-control" type="submit">Edit</button>
    <a class="link-info" asp-controller="Users" asp-action="Profile">Profile</a>
</form>
